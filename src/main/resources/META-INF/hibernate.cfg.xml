<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/souninja</property>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>

        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">update</property>

		<mapping class="br.com.souninja.entity.AnexoTipo"/>
        <mapping class="br.com.souninja.entity.Cliente"/>
        <mapping class="br.com.souninja.entity.ClienteAnexoTipo"/>
        <mapping class="br.com.souninja.entity.ClienteRegimeTributario"/>
        <mapping class="br.com.souninja.entity.Imposto"/>
        <mapping class="br.com.souninja.entity.ImpostoTipo"/>
        <mapping class="br.com.souninja.entity.NotaFiscal"/>
        

    </session-factory>
</hibernate-configuration>